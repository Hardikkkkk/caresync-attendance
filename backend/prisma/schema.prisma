generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          Int      @id @default(autoincrement())
  name        String
  email       String   @unique
  role        String   // 'manager' or 'careworker'
  clockEvents ClockEvent[]
}

model ClockEvent {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  type      String   // 'IN' or 'OUT'
  note      String?
  latitude  Float
  longitude Float
  timestamp DateTime @default(now())
}

model Setting {
  id         Int    @id @default(autoincrement())
  name       String @unique
  value      String
}
